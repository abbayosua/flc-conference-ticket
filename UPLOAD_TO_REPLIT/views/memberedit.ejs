 <h1>Edit User</h1>
 <form method="POST" action="/memberedit/<%= user._id %>">
 <label for="email">Email:</label>
 <input type="email" name="email" id="email" value="<%= user.email %>" required>
 <br>
 <label for="full_name">Full Name:</label>
 <input type="text" name="full_name" id="full_name" value="<%= user.full_name %>" required>
 <br>
 <label for="born_date">Birth Date:</label>
 <input type="date" name="born_date" id="born_date" value="<%= user.born_date %>" required>
 <br>
 <label for="city">City:</label>
 <input type="text" name="city" id="city" value="<%= user.city %>" required>
 <br>
 <label for="phone_number">Phone Number:</label>
 <input type="tel" name="phone_number" id="phone_number" value="<%= user.phone_number %>" required>
 <br>
 <label for="position_at_church">Position at Church:</label>
 <input type="text" name="position_at_church" id="position_at_church" value="<%= user.position_at_church %>" required>
 <br>
 <label for="tshirt_size">T-Shirt Size:</label>
 <select name="tshirt_size" id="tshirt_size" required>
 <option value="S" <%= user.tshirt_size === 'S' ? 'selected' : '' %>>S</option>
 <option value="M" <%= user.tshirt_size === 'M' ? 'selected' : '' %>>M</option>
 <option value="L" <%= user.tshirt_size === 'L' ? 'selected' : '' %>>L</option>
 <option value="XL" <%= user.tshirt_size === 'XL' ? 'selected' : '' %>>XL</option>
 </select>
 <br>
 <label for="blazer_size">Blazer Size:</label>
 <select name="blazer_size" id="blazer_size" required>
 <option value="S" <%= user.blazer_size === 'S' ? 'selected' : '' %>>S</option>
 <option value="M" <%= user.blazer_size === 'M' ? 'selected' : '' %>>M</option>
 <option value="L" <%= user.blazer_size === 'L' ? 'selected' : '' %>>L</option>
 <option value="XL" <%= user.blazer_size === 'XL' ? 'selected' : '' %>>XL</option>
 </select>
 <br>
 <label for="profile_picture">Profile Picture:</label>
<!--  <input type="text" name="profile_picture" id="profile_picture" value="<%= user.profile_picture %>" required> -->
   <img src="<%= user.profile_picture %>" width="50px"/>
 <br>
 <label for="quotes_words">Quotes Words:</label>
 <textarea name="quotes_words" id="quotes_words" required><%= user.quotes_words %></textarea>
 <br>
  <div class="d-flex flex-row">
    <button type="submit">
      <a class="btn btn-primary">Save Changes</a>
    </button>
      <a class="btn btn-secondary" href="/">Cancel</a>
    </div>
    </form>
